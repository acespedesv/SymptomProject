<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorMainGreen">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info"
        android:textSize="30sp"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorMainWhite"/>

    <LinearLayout
        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_name"
            android:inputType="text"
            android:textColorHint="@color/colorWhiteHint"
            android:backgroundTint="@color/colorMainWhite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:fontFamily="@font/montserrat"
            android:layout_marginVertical="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <EditText
                android:id="@+id/user_first_last_name"
                android:inputType="text"
                android:textColorHint="@color/colorWhiteHint"
                android:backgroundTint="@color/colorMainWhite"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:hint="@string/first_last_name"
                android:fontFamily="@font/montserrat"
                android:layout_marginVertical="8dp"/>
            <EditText
                android:id="@+id/user_second_last_name"
                android:inputType="text"
                android:textColorHint="@color/colorWhiteHint"
                android:backgroundTint="@color/colorMainWhite"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:hint="@string/second_last_name"
                android:fontFamily="@font/montserrat"
                android:layout_marginVertical="8dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/user_id"
            android:inputType="number"
            android:textColorHint="@color/colorWhiteHint"
            android:backgroundTint="@color/colorMainWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/id_number"
            android:fontFamily="@font/montserrat"
            android:layout_marginVertical="8dp"/>
        <EditText
            android:id="@+id/user_birth_date"
            android:inputType="date"
            android:textColorHint="@color/colorWhiteHint"
            android:backgroundTint="@color/colorMainWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/birth_day"
            android:drawableEnd="@drawable/ic_history"
            android:fontFamily="@font/montserrat"
            android:layout_marginVertical="8dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:text="@string/continue_text"
        android:textColor="@color/colorMainWhite"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"/>

</LinearLayout>