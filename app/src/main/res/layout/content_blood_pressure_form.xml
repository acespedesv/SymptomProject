<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BloodPressureForm"
    tools:showIn="@layout/activity_blood_pressure_form">

    <TextView
        android:id="@+id/form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/glucosa_form_title"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_title"
        app:layout_constraintVertical_bias="0.083">

        <View
            android:layout_gravity="center"
            android:layout_width="@dimen/blood_pressure_image_width"
            android:layout_height="@dimen/blood_pressure_image_height"
            android:background="@drawable/blood_pressure_form_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center">

            <EditText
                android:id="@+id/date_pressure"
                android:autofillHints="@string/sample_date"
                android:inputType="date"
                android:padding="@dimen/edit_text_padding"
                android:background="@drawable/edit_text_style"
                android:layout_width="@dimen/edit_text_width"
                android:layout_height="wrap_content"
                android:text="@string/sample_date"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:tint="@color/colorMainGreen"
                android:src="@drawable/ic_flip">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center">

            <EditText
                android:id="@+id/hour_pressure"
                android:inputType="date"
                android:autofillHints="@string/sample_hour"
                android:background="@drawable/edit_text_style"
                android:padding="@dimen/edit_text_padding"
                android:layout_width="@dimen/edit_text_width"
                android:layout_height="wrap_content"
                android:text="@string/sample_hour"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:tint="@color/colorMainGreen"
                android:src="@drawable/ic_flip">

            </ImageView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:background="@drawable/save_button"
        android:id="@+id/save_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/save_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>