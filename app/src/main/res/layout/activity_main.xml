<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBlue"
        android:id="@+id/toolbar"
        app:logo="@drawable/ic_menu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/date_sample"
            android:textColor="@color/colorMainWhite"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/calendar_fragment"
            android:name="com.project.symptoms.CalendarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_calendar" />

        <fragment
            android:id="@+id/body_fragment"
            android:layout_marginTop="15dp"
            android:name="com.project.symptoms.BodyFragment"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            tools:layout="@layout/fragment_body" />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_main_menu"
            android:id="@+id/fragment_main_menu" />

    </LinearLayout>

</LinearLayout>